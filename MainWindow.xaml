<Window x:Class="Projektas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projektas"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,10,400,0">
        <StackPanel>
            <Button
                x:Name="MainButton"                
                Cursor="Hand" Click="MainButton_Click" Width="121"
                Content="Show folder files"
                />
            <ListBox Height="383" Width="376">
                <TextBlock Grid.Column="1" Text="{Binding Name}">
                </TextBlock>
            </ListBox>
        </StackPanel>
        <StackPanel Margin="400,0,-400,0">
            <Image x:Name="Image" RenderOptions.BitmapScalingMode="Fant" HorizontalAlignment="Left" Width="400" Height="425" Stretch="Uniform"/>
        </StackPanel>
    </Grid>
</Window>
